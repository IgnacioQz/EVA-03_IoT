<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_light"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen con borde morado y sombra -->
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp">

            <!-- Borde decorativo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_border_gradient" />

            <!-- Imagen -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imagenNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:contentDescription="Imagen de noticia" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <!-- Contenedor de textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Badge decorativo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/dot_gradient" />

                <TextView
                    android:id="@+id/fechaNoticia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Nov 2025"
                    android:textSize="11sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • Hace 2h"
                    android:textSize="11sp"
                    android:textColor="@color/text_light" />

            </LinearLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/tituloNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la noticia importante y destacada"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Bajada -->
            <TextView
                android:id="@+id/bajadaNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción breve de la noticia que captura la atención"
                android:textSize="13sp"
                android:textColor="@color/text_light"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>