<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <!-- Header con botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@color/white"
            android:elevation="4dp">

            <!-- Botón Volver -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_gray_background">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/text_dark"
                    android:contentDescription="Volver" />

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Icono de usuario -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_primary_background">

                <ImageView
                    android:id="@+id/userButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@color/white"
                    android:contentDescription="Usuario" />

            </FrameLayout>

        </LinearLayout>

        <!-- Imagen destacada -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imagenNoticia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Imagen de la noticia" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/date_badge_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/fechaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Nov 2025"
                    android:textSize="13sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/tituloTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la noticia"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Bajada -->
            <TextView
                android:id="@+id/bajadaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen de la noticia"
                android:textSize="16sp"
                android:textColor="@color/text_light"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Separador -->
            <View
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="@color/accent"
                android:layout_marginBottom="20dp" />

            <!-- Cuerpo -->
            <TextView
                android:id="@+id/cuerpoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contenido completo de la noticia..."
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:lineSpacingExtra="6dp"
                android:justificationMode="inter_word" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>